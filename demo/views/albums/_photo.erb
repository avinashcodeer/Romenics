<li class="album-photo">
  <div class="media">
    <div class="media-left">
      <img src="<%= photo.image_url(:thumbnail) %>" width=150 class="img-thumbnail file-upload-preview media-object" id="album-photo-preview-<%= idx %>" />
    </div>
    <div class="media-body">
      <div class="form-group">
        <input type="hidden" name="album[photos_attributes][<%= idx %>][image]" value="<%== photo.cached_image_data %>" id="album-photo-upload-result-<%= idx %>" />
        <input type="file" name="album[photos_attributes][<%= idx %>][image]" accept="<%= ImageUploader::ALLOWED_TYPES.join(",") %>" id="album-photo-field-<%= idx %>" data-preview-element="album-photo-preview-<%= idx %>" data-upload-result-element="album-photo-upload-result-<%= idx %>" data-upload-server="<%= upload_server %>"  />
      </div>
      <div class="form-group">
        <label for="album-photo-title-field-<%= idx %>">Title</label>
        <input type="text" name="album[photos_attributes][<%= idx %>][title]" value="<%== photo.title %>" id="album-photo-title-field-<%= idx %>" />
      </div>
      <% if photo.id %>
        <input type="hidden" name="album[photos_attributes][<%= idx %>][id]" value="<%= photo.id %>" />
      <% end %>
      Remove photo: <input type="checkbox" name="album[photos_attributes][<%= idx %>][_delete]" value="true" />
    </div>
  </div>
</li>
